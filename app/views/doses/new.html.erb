<div class="container padded">
  <h3 class="text-center">Add an ingredient</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.association :ingredient %>
      <%= f.input :description %>
      <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
      <div class="pad20">
        <%= link_to "Add new cocktail", cocktails_path, class: "btn btn-warning btn-sm" %>
      </div>
    </div>
  </div>
</div>

